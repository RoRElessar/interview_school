<h1>Classrooms</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th colspan="2"></th>
  </tr>
  </thead>

  <tbody>
  <% @classrooms.each do |classroom| %>
    <tr>
      <td><%= classroom.name %></td>
      <td><%= link_to 'Edit', edit_classroom_path(classroom) %></td>
      <td><%= link_to 'Destroy', classroom, data: { 'turbo-method': :delete, 'turbo-confirm': 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Classroom', new_classroom_path %>
