<h1>Sections</h1>

<table>
  <thead>
  <tr>
    <th>Teacher</th>
    <th>Subject</th>
    <th>Classroom</th>
    <th>Week Days</th>
    <th>Duration</th>
    <th colspan="4"></th>
  </tr>
  </thead>

  <tbody>
  <% @sections.each do |section| %>
    <tr>
      <td><%= section.teacher.full_name %></td>
      <td><%= section.subject.name %></td>
      <td><%= section.classroom.name %></td>
      <td><%= section.week_days.join(', ') %></td>
      <td><%= section.duration %></td>
      <td><%= link_to 'Show', section %></td>
      <td><%= link_to 'Edit', edit_section_path(section) %></td>
      <td><%= link_to 'Destroy', section, data: { 'turbo-method': :delete, 'turbo-confirm': 'Are you sure?' } %></td>
      <td><%= link_to 'Add Student', '#' %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Section', new_section_path %>
